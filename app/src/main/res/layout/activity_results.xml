<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pierremichel.breathalyzerskeleton.ResultsActivity">


    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="175dp"
        android:layout_height="130dp"
        app:srcCompat="@drawable/uber"
        android:layout_marginTop="18dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />


    <Button
        android:id="@+id/bUber"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Call an Uber?"
        android:textColor="#000000"
        tools:layout_editor_absoluteX="136dp"
        tools:layout_editor_absoluteY="298dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="84dp"
        android:layout_alignEnd="@+id/imageView6"
        android:layout_toEndOf="@+id/bBack" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/illegal"
        android:layout_marginTop="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="90dp"
        android:layout_height="60dp"
        app:srcCompat="@drawable/button"
        android:layout_marginBottom="48dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageView6" />

    <Button
        android:id="@+id/bBack"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/imageView7"
        android:text="back"
        android:textColor="#ffffff" />

</RelativeLayout>
